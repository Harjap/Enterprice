@model IEnumerable<assignment.Models.Collection>

@{
    ViewBag.Title = "My Collection of Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Collection of Games</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DesignerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GameID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DesignerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CollectionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CollectionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CollectionID })
        </td>
    </tr>
}

</table>
